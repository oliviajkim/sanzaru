
<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 job-details">
	<% if current_user.present? %>
		<%= link_to "Edit Post", edit_job_path(@job) %>
	<% end %>
</div>


<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 job-details">
	<h5 class="job-number">Job Number: <%= @job.job_number %><small class="created-on">&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Created on: <%= @job.created_at.strftime("%B %d, %Y") %></small></h5>

	<h3 class="job-title"><%= @job.title %></h3>
	<br><br>
	<%= simple_format(@job.description) %>
</div>