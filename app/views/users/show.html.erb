<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1" id="user-header">
	<div class="text-center" id="user-header">
	  <h4 class="text-center" style="margin-top:40px">WELCOME</h4>
	  <h6>Today is: <%= Time.now.strftime("%a, %B %d, %Y") %></h6>
	</div>
</div>
<!-- 	<br><br> -->


	<div class="col-xs-12 text-center menu">
		  <% if current_user %>
			<%= link_to "New Post", new_job_path, id:"new-post-btn" %>

		  	<%= link_to "Edit Profile", edit_user_path(@user), id:"edit-profile-btn" %></small>

			<%= link_to "Logout", logout_path, method: :delete, id:"logout-btn" %>
		  <% end %>
	</div>

	<div class="col-sm-8 col-sm-offset-2 col-xs-12">
		<h4>Open Positions</h4>
		<hr>
		<% @user.jobs.each do |job| %>
			<h4 class="job-title"><%= link_to job.title, job_path(job) %>
			<small class="job-number">Job Number: <%= job.job_number %></small></h4>
			<br>
		<% end %>

	</div>
